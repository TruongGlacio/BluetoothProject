<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    android:shape="rectangle">
    <!-- Set màu nền-->
    <solid
        android:color="#D50000" >
    </solid>

    <!-- đặt thuộc tính màu và độ rộng của đường viền -->
    <stroke
        android:width="1dp"
        android:color="#D50000" >
    </stroke>
    <size
        android:height="6dp"
        android:width="6dp"

        />
    <!-- các thuộc tính căn chỉnh-->
    <padding
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp" >
    </padding>

    <!-- và đây là bán kính đường tròn ở 4 góc -->
    <corners
        android:radius="6dp" >
    </corners>

</shape>